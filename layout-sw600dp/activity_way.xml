<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/scrambleButton"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/black"
            android:text="Scramble"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="スクランブルのための回転記号が画面上側に表示されます。　ただし、緑の面を自分側に、白の面を上側に固定してスクランブルすること。"
            android:textSize="18sp" />

        <Button
            android:id="@+id/startbutton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/circle_button"
            android:text="Start"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="1度押すと、タイマーがスタートします。もう1度押すと、タイマーがストップします。タイマーの結果は、画面下側に表示されます。"
            android:textSize="18sp" />

        <Button
            android:id="@+id/drawing3D"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#0066FF"
            android:text="3D"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="画面が切り替わり、スクランブル後のキューブの色の配置を3Dで見ることができます。戻るときは、スマートフォン本体の戻るボタンで戻ることができます。"
            android:textSize="18sp" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#0066FF"
            android:text="RESET"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="画面下側のタイム結果の表示がリセットされます。ao5、ao12もリセットされます。"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="ao5:5回のタイムのうち、最も早いタイムと最も遅いタイムを除いた平均タイム。"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="ao12:12回のタイムのうち、最も早いタイムと最も遅いタイムを除いた平均タイム。"
            android:textSize="18sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>